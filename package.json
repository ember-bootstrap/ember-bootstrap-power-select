{
  "name": "ember-bootstrap-power-select",
  "version": "6.0.0",
  "description": "Integrate ember-power-select into your ember-bootstrap forms",
  "keywords": [
    "ember-addon",
    "ember-bootstrap",
    "ember-power-select"
  ],
  "repository": "https://github.com/ember-bootstrap/ember-bootstrap-power-select.git",
  "license": "MIT",
  "author": "Simon Ihmig <ihmig@kaliber5.de>",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "format": "prettier . --cache --write",
    "lint": "concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\" --prefixColors auto",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "concurrently \"pnpm:lint:css -- --fix\"",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\" --prefixColors auto && pnpm format",
    "lint:format": "prettier . --cache --check",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "ember server",
    "test": "concurrently \"pnpm:lint\" \"pnpm:test:*\" --names \"lint,test:\" --prefixColors auto",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each",
    "test:blueprint": "mocha node-tests --recursive"
  },
  "dependencies": {
    "@babel/core": "^7.27.1",
    "chalk": "^4.1.2",
    "ember-cli-babel": "^8.2.0",
    "ember-cli-build-config-editor": "^0.5.0",
    "ember-cli-htmlbars": "^6.3.0",
    "ember-template-imports": "^4.3.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.28.5",
    "@babel/plugin-proposal-decorators": "7.28.0",
    "@ember/optional-features": "2.3.0",
    "@ember/test-helpers": "5.4.1",
    "@embroider/macros": "1.19.5",
    "@embroider/test-setup": "4.0.0",
    "@eslint/js": "9.39.1",
    "@glimmer/component": "2.0.0",
    "@glimmer/tracking": "1.1.2",
    "@release-it-plugins/lerna-changelog": "8.0.1",
    "bootstrap": "5.3.8",
    "broccoli-asset-rev": "3.0.0",
    "concurrently": "9.2.1",
    "ember-auto-import": "2.12.0",
    "ember-basic-dropdown": "8.8.0",
    "ember-bootstrap": "6.7.0",
    "ember-cli": "6.7.2",
    "ember-cli-blueprint-test-helpers": "0.19.2",
    "ember-cli-clean-css": "3.0.0",
    "ember-cli-dependency-checker": "3.3.3",
    "ember-cli-deprecation-workflow": "3.4.0",
    "ember-cli-inject-live-reload": "2.1.0",
    "ember-cli-sri": "2.1.1",
    "ember-cli-terser": "4.0.2",
    "ember-concurrency": "5.1.0",
    "ember-load-initializers": "3.0.1",
    "ember-page-title": "9.0.3",
    "ember-power-select": "8.12.0",
    "ember-qunit": "9.0.4",
    "ember-resolver": "13.1.1",
    "ember-source": "6.9.0",
    "ember-source-channel-url": "3.0.0",
    "ember-template-lint": "7.9.3",
    "ember-try": "4.0.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-ember": "12.7.5",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-qunit": "8.2.5",
    "globals": "16.5.0",
    "loader.js": "4.7.0",
    "mocha": "11.7.5",
    "prettier": "3.7.3",
    "prettier-plugin-ember-template-tag": "2.1.2",
    "qunit": "2.24.3",
    "qunit-dom": "3.5.0",
    "release-it": "19.0.6",
    "stylelint": "16.26.1",
    "stylelint-config-standard": "39.0.1",
    "webpack": "5.103.0"
  },
  "peerDependencies": {
    "ember-bootstrap": ">=5",
    "ember-power-select": ">=6",
    "ember-source": ">=3.28"
  },
  "engines": {
    "node": "20.* || 22.* || >= 24"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
